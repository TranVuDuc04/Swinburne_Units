<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_payment_upload"
    android:gravity="center"
    android:padding="16dp">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/rounded_background">

    <EditText
    android:id="@+id/etPaymentAmount"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Enter Payment Amount"
    android:inputType="numberDecimal"
    android:textColor="@android:color/white"
    android:backgroundTint="@color/white"
    android:textColorHint="@android:color/white"
    android:layout_marginBottom="16dp"/>

    <EditText
    android:id="@+id/etPaymentDescription"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Enter Payment Description"
    android:textColor="@android:color/white"
    android:textColorHint="@android:color/white"
    android:backgroundTint="@color/white"
    android:layout_marginBottom="16dp"/>

    <Button
    android:id="@+id/btnSavePayment"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="18sp"
    android:backgroundTint="#c6b861"
    android:text="Save Payment"/>

    </LinearLayout>
</LinearLayout>
